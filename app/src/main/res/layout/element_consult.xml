<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/element_consult_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <TextView
            android:id="@+id/element_consult_txt_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/element_consult_txt_vet_name"
            app:layout_constraintStart_toStartOf="@+id/element_consult_txt_vet_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Firulais" />

    <TextView
            android:id="@+id/element_consult_txt_vet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/element_consult_img_animal"
            app:layout_constraintTop_toBottomOf="@+id/element_consult_txt_pet_name"
            tools:text="Dr. House" />

    <ImageView
            android:id="@+id/element_consult_img_animal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_paw24dp" />

    <TextView
            android:id="@+id/element_consult_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/element_consult_img_vaccine"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="06/10/2019" />

    <ImageView
            android:id="@+id/element_consult_img_vaccine"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/element_consult_img_pill"
            app:layout_constraintEnd_toEndOf="@+id/element_consult_img_pill"
            app:layout_constraintTop_toBottomOf="@+id/element_consult_txt_date"
            app:srcCompat="@drawable/icon_vaccine" />

    <ImageView
            android:id="@+id/element_consult_img_pill"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/element_consult_img_vaccine"
            app:srcCompat="@drawable/icon_pill_2" />

    <ImageButton
            android:id="@+id/element_consult_btn_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/element_consult_img_pill"
            app:layout_constraintEnd_toStartOf="@+id/element_consult_img_vaccine"
            app:layout_constraintTop_toTopOf="@+id/element_consult_img_vaccine"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>