<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_by_name_consult_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.vetFragments.vetConsultFragments.ByNameConsultFragment" >

    <SearchView
            android:id="@+id/fragment_by_name_consult_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_by_name_consult_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_by_name_back">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnNewConsult"
            android:scaleType="fitCenter"
            android:elevation="32dp" android:background="@drawable/btn_consult_circle"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="12dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="328dp"/>

    <TextView
            android:id="@+id/txtNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="No data to display"
            android:textSize="30sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/btn_by_name_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/icon_arrow_right"
            android:rotation="180"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_by_name_consult_search" />
</androidx.constraintlayout.widget.ConstraintLayout>